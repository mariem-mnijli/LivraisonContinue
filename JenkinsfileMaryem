pipeline {
  agent any 
  stages {
    stage('git checkout') {
      steps {
        git branch : 'master',
        url: 'https://github.com/mariem-mnijli/LivraisonContinue.git',
        credentialsId: '29cf0b22-346f-46ff-939e-0a64fa935f8c';
        echo 'checkout stage'
           }
  }
stage("Docker") {
            steps {
                sh "ansible-playbook ansible/build.yml -i ansible/inventory/host.yml"
            }
        }
  
  
  
  }
  }
  
