pipeline {
  agent any 
  stages {
    stage('git checkout') {
      steps {
        git branch : 'master',
        url: 'https://github.com/mariem-mnijli/LivraisonContinue.git',
        credentialsId: '55bb9522-d6da-44f5-a981-79141d05964c';
        echo 'checkout stage'
           }
  }
stage("Docker") {
            steps {
                sh "ansible-playbook ansible/build.yml -i ansible/inventory/host.yml"
            }
        }
  
  
  
  }
  }
  
